{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deck List Response Schema",
  "description": "Response format for deck listing operations",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string",
      "const": "deck_list"
    },
    "decks": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Deck name (hierarchical format)"
          },
          "note_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of notes in the deck"
          }
        },
        "required": ["name", "note_count"],
        "additionalProperties": false
      }
    }
  },
  "required": ["kind", "decks"],
  "additionalProperties": false
}
