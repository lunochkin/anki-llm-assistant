{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Common Schema Definitions",
  "description": "Shared types and definitions used across the Anki LLM Assistant",
  "definitions": {
    "deck_info": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Deck name (hierarchical format)"
        },
        "note_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of notes in the deck"
        }
      },
      "required": ["name", "note_count"],
      "additionalProperties": false
    },
    "card_info": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique card identifier"
        },
        "front": {
          "type": "string",
          "description": "Front side content of the card"
        },
        "back": {
          "type": "string",
          "description": "Back side content of the card"
        }
      },
      "required": ["id", "front", "back"],
      "additionalProperties": false
    },
    "limit_constraint": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "description": "Limit constraint for data retrieval operations"
    }
  }
}
